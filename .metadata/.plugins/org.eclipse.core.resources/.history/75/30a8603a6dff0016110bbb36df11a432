package main;

import javax.swing.JFrame;
import javax.swing.SwingUtilities;
import javax.swing.WindowConstants;

import gui.MainFrame;

public class Main {

	public static void main(String[] args) {
		
		// starter tråd som gui kan kjøres i
		// oppretter objekt av anonym klasse som impelmenterer Runnable interfacet
		SwingUtilities.invokeLater(new Runnable() {
			
			// implementerer run metoden som interfacet krever
			@Override
			public void run() {
				
				// logikk for å starte gui
				// instansierer vår guiklasse
				MainFrame frame = new MainFrame("Min stygge app");
				
				// setter at programmet/tråden skal slutte å kjøre når gui/JFramen/MainFrame lukke
				frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				
				// setter størrelsen på framen
				frame.setSize(400, 400);
				
				// sier at framen ikke kan få størrelsen justert
				frame.setResizable(false);
				
				// sier at nå skal vi vise framen/gui
				frame.setVisible(true);
			}
		});
	}

}
